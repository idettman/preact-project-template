{
  "name": "react-app-template",
  "title": "React Application Template",
  "version": "1.0.0",
  "description": "React application template project using Rollup and Buble for transpilation",
  "author": {
    "name": "Isaac Dettman",
    "url": "https://github.com/idettman"
  },
  "license": "MIT",
  "keywords": [
    "BublÃ©",
    "React",
    "Rollup",
    "StandardJS"
  ],
  "repository": {
    "type": "git",
    "url": "https://github.com/idettman/react-app-template"
  },
  "main": "index.js",
  "files": [
	"src/*",
	"bin/index.html",
	"rollup.js",
	".eslintrc",
	".npmrc"
  ],
  "config": {
    "port": "8080",
    "BUILD_MODES": {
      "DEV": "development",
      "PROD": "production"
    }
  },
  "engines": {
    "npm": ">=3.0.0",
    "node": ">=6.0.0"
  },
  "scripts": {
    "test": "echo \"Error: no test specified\" && exit 1",
    "build": "npm run dev",
	"dev": "rollup --config rollup.js --env=development",
	"prod": "NODE_ENV=production rollup --config rollup.js --env=production",
    "rollup": "rollup"
  },
  "dependencies": {
    "react": "^15.4.2",
    "react-dom": "^15.4.2"
  },
  "devDependencies": {
    "rollup": "^0.41.4",
    "rollup-plugin-buble": "^0.15.0",
    "rollup-plugin-cleanup": "^1.0.0",
    "rollup-plugin-commonjs": "^7.0.0",
    "rollup-plugin-inject": "^2.0.0",
    "rollup-plugin-node-resolve": "^2.0.0",
    "rollup-plugin-progress": "^0.2.1",
    "rollup-plugin-uglify": "^1.0.1",
    "rollup-plugin-visualizer": "^0.2.0"
  },
  "standard": {
    "ignore": [
      "build"
    ]
  }
}
